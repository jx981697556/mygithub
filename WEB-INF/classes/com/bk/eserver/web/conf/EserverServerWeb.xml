<!DOCTYPE struts PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
<!--将该脚本加入struts2配置文件中      资源服务<include file="com/bk/eserver/web/conf/EserverServerWeb.xml"></include> -->
<struts>
	<!-- 资源服务 -->
	<package name="EserverServer_Ajax_code" extends="json-default">
	
		<action name="fileAction" class="com.bk.eserver.web.action.ActionEserverServerQuery" method="fileUpload">
            <result type="json" name="success">
                <param name="contentType">text/html</param>
            </result>
        </action>
        <action name="editFileAction" class="com.bk.eserver.web.action.ActionEserverServerQuery" method="editFileUpload">
            <result type="json" name="success">
                <param name="contentType">text/html</param>
            </result>
        </action>
		<!-- 资源服务查询 -->
		<action name="EserverServerqueryAll" method="queryall"
			class="com.bk.eserver.web.action.ActionEserverServerQuery">
			<result type="json"></result>
		</action>
		<!-- 资源服务增加 -->
		<action name="EserverServeraddCommit" method="addSubmit"
			class="com.bk.eserver.web.action.ActionEserverServerQuery">
			<result type="json"></result>
		</action>
		<!-- 资源服务删除 -->
		<action name="EserverServerdeleteCommit" method="delSubmit"
			class="com.bk.eserver.web.action.ActionEserverServerQuery">
			<result type="json"></result>
		</action>
		<!-- 资源服务修改 -->
		<action name="EserverServereditCommit" method="editSubmit"
			class="com.bk.eserver.web.action.ActionEserverServerQuery">
			<result type="json"></result>
		</action>
		<!-- 删除附件 -->
		<action name="FileDel" method="fileDel"
			class="com.bk.eserver.web.action.ActionEserverServerQuery">
			<result type="json"></result>
		</action>
	</package>
	<package name="EserverServer_Jsp_code" extends="struts-default">
		<!-- 资源服务详细【修改、浏览】 -->
		<action name="EserverServershow" method="view"
			class="com.bk.eserver.web.action.ActionEserverServerQuery">
			<result>/APP-ESERVER/ADMIN/pEserverServerEntity.jsp</result>
		</action>
		<!-- html加载资源服务控制台 -->
		<action name="EserverServer_ACTION_CONSOLE">
			<result>/APP-ESERVER/ADMIN/pEserverServerLayout.jsp</result>
		</action>
		<!-- ajax加载资源服务选择页面 -->
		<action name="EserverServer_ACTION_ALERT" >
			<result>/APP-ESERVER/ADMIN/pEserverServerGrid.jsp</result>
		</action>
		<action name="FPdownloadImage" class="com.bk.eserver.web.action.ActionEserverServerQuery" method="readImg" >
			<result type="stream">
				<param name="contentType">application/octet-stream</param>
				<param name="inputName">inputStream</param>
				 <param name="contentDisposition">attachment;filename=${fileName}</param>  
				<param name="bufferSize">4096</param>
			</result>
		</action>
	</package>
</struts>