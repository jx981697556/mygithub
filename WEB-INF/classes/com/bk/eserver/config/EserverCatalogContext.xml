<?xml version="1.0" encoding="UTF-8"?>
<!--将该脚本加入spring配置文件中      资源服务分类<import resource="classpath:com/bk/eserver/config/EserverCatalogContext.xml"></import> -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<!-- 资源服务分类Dao实现 -->
	<bean id="eserver_catalogDaoId"
		class="com.bk.eserver.dao.EserverCatalogDao">
		<property name="sessionFatory">
			<ref bean="sessionFactory" />
		</property>
		<property name="sqlTools">
			<bean id="EserverCatalog_sqlTool" class="com.farm.core.sql.utils.HibernateSQLTools">
				<constructor-arg>
					<ref bean="sessionFactory" />
				</constructor-arg>
				<constructor-arg>
					<bean id="EserverCatalog_object" class="com.bk.eserver.domain.EserverCatalog"></bean>
				</constructor-arg>
			</bean>
		</property>
	</bean>
	<!-- 资源服务分类中间表Dao实现 -->
	<bean id="eserver_ReCatalogServerId"
		class="com.bk.eserver.dao.EserverReCatalogServerDao">
		<property name="sessionFatory">
			<ref bean="sessionFactory" />
		</property>
		<property name="sqlTools">
			<bean id="EserverReCatalogServer_sqlTool" class="com.farm.core.sql.utils.HibernateSQLTools">
				<constructor-arg>
					<ref bean="sessionFactory" />
				</constructor-arg>
				<constructor-arg>
					<bean id="EserverReCatalogServer_object" class="com.bk.eserver.domain.EserverReCatalogServer"></bean>
				</constructor-arg>
			</bean>
		</property>
	</bean>
	<!-- Server实现 -->
	<bean id="eserver_catalogServerId"
		class="com.bk.eserver.server.EserverCatalogManagerImpl">
		<property name="eserverCatalogDao">
			<ref bean="eserver_catalogDaoId" />
		</property>
		<property name="eserverReCatalogServerDao">
			<ref bean="eserver_ReCatalogServerId" />
		</property>
	</bean>
	<!-- Server事务代理类 -->
	<bean id="eserver_catalogProxyId"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="proxyInterfaces">
			<list>
				<value>
					com.bk.eserver.server.EserverCatalogManagerInter
				</value>
			</list>
		</property>
		<property name="transactionManager">
			<ref bean="TransactionManager" />
		</property>
		<property name="target">
			<ref bean="eserver_catalogServerId" />
		</property>
		<property name="transactionAttributeSource">
			<ref bean="KEYeserver_catalogTRANCACTION" />
		</property>
	</bean>
	<!-- 事务属性声明 -->
	<bean id="KEYeserver_catalogTRANCACTION"
		class="org.springframework.transaction.interceptor.NameMatchTransactionAttributeSource">
		<property name="properties">
			<props>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
</beans>